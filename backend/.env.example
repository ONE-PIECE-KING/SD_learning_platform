# Application
APP_NAME="Learning Platform API"
APP_VERSION="1.0.0"
DEBUG=true
API_V1_PREFIX="/api/v1"

# Database (PostgreSQL)
DATABASE_URL="postgresql+asyncpg://postgres:postgres@localhost:5432/learning_platform"
DATABASE_ECHO=false

# Redis
REDIS_URL="redis://localhost:6379/0"

# JWT Authentication
SECRET_KEY="your-super-secret-key-change-in-production"
ALGORITHM="HS256"
ACCESS_TOKEN_EXPIRE_MINUTES=30
REFRESH_TOKEN_EXPIRE_DAYS=7

# Google OAuth (從 Google Cloud Console 取得)
GOOGLE_CLIENT_ID="your-google-client-id"
GOOGLE_CLIENT_SECRET="your-google-client-secret"
GOOGLE_REDIRECT_URI="http://localhost:3000/auth/google/callback"

# MinIO / S3 Storage
MINIO_ENDPOINT="localhost:9000"
MINIO_ACCESS_KEY="minioadmin"
MINIO_SECRET_KEY="minioadmin"
MINIO_BUCKET_NAME="learning-platform"
MINIO_SECURE=false

# CORS (comma-separated for multiple origins)
CORS_ORIGINS=["http://localhost:3000", "http://localhost:5173"]

# Platform Settings
PLATFORM_FEE_PERCENTAGE=0.20
