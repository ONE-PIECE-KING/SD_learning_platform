# ============================================================
# Learning Platform - Environment Variables
# ============================================================
# Copy this file to .env and fill in the values
# DO NOT commit .env to version control!

# ==================== General ====================
COMPOSE_PROJECT_NAME=learning-platform
ENVIRONMENT=development

# ==================== PostgreSQL ====================
POSTGRES_USER=learning_admin
POSTGRES_PASSWORD=your_secure_password_here
POSTGRES_DB=learning_platform
POSTGRES_HOST=postgres
POSTGRES_PORT=5432

# Database URL for backend (async)
DATABASE_URL=postgresql+asyncpg://${POSTGRES_USER}:${POSTGRES_PASSWORD}@${POSTGRES_HOST}:${POSTGRES_PORT}/${POSTGRES_DB}

# Database URL for Alembic (sync)
DATABASE_URL_SYNC=postgresql://${POSTGRES_USER}:${POSTGRES_PASSWORD}@${POSTGRES_HOST}:${POSTGRES_PORT}/${POSTGRES_DB}

# ==================== Redis ====================
REDIS_HOST=redis
REDIS_PORT=6379
REDIS_PASSWORD=
REDIS_URL=redis://${REDIS_HOST}:${REDIS_PORT}/0

# Celery broker
CELERY_BROKER_URL=redis://${REDIS_HOST}:${REDIS_PORT}/1
CELERY_RESULT_BACKEND=redis://${REDIS_HOST}:${REDIS_PORT}/2

# ==================== MinIO (S3-compatible) ====================
MINIO_ROOT_USER=minioadmin
MINIO_ROOT_PASSWORD=minioadmin123
MINIO_ENDPOINT=minio:9000
MINIO_ACCESS_KEY=${MINIO_ROOT_USER}
MINIO_SECRET_KEY=${MINIO_ROOT_PASSWORD}
MINIO_BUCKET=learning-platform
MINIO_SECURE=false

# ==================== Backend (FastAPI) ====================
SECRET_KEY=your-super-secret-key-change-in-production
ALGORITHM=HS256
ACCESS_TOKEN_EXPIRE_MINUTES=30
REFRESH_TOKEN_EXPIRE_DAYS=7

# Backend server
BACKEND_HOST=0.0.0.0
BACKEND_PORT=8000
BACKEND_RELOAD=true

# CORS
CORS_ORIGINS=http://localhost:3000,http://localhost:5173,http://localhost:80

# ==================== Frontend (Vite) ====================
VITE_API_BASE_URL=http://localhost:8000
VITE_WS_BASE_URL=ws://localhost:8000

# ==================== OAuth (Optional) ====================
# Google OAuth
GOOGLE_CLIENT_ID=
GOOGLE_CLIENT_SECRET=

# LINE Login
LINE_CHANNEL_ID=
LINE_CHANNEL_SECRET=

# ==================== AI Services (Optional) ====================
OPENAI_API_KEY=
AZURE_OPENAI_ENDPOINT=
AZURE_OPENAI_KEY=

# ==================== Email (Optional) ====================
SMTP_HOST=
SMTP_PORT=587
SMTP_USER=
SMTP_PASSWORD=
EMAIL_FROM=noreply@example.com

# ==================== Payment (Optional) ====================
# ECPay (綠界)
ECPAY_MERCHANT_ID=
ECPAY_HASH_KEY=
ECPAY_HASH_IV=

# ==================== Monitoring (Optional) ====================
SENTRY_DSN=

# ==================== PgAdmin ====================
PGADMIN_DEFAULT_EMAIL=admin@example.com
PGADMIN_DEFAULT_PASSWORD=admin123
